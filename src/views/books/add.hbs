<div class="jumbotron">
  <h1 class="display-4">Add book</h1>
  <p class="lead">Add a book to our database</p>
  <hr class="my-4">
</div>

<div class="col-md-4 mx-auto">
  <div class="card card-body">
    <form action="/books/add" method="POST">
      <div class="mb-3">
        <input type="text" name="title" id="" class="form-control" placeholder="Book title" autofocus required> 
      </div>
      <div class="mb-3">  
        <input type="text" name="author" id="" class="form-control" placeholder="Author" autofocus required> 
      </div>
      <div class="mb-3">
        <input type="text" name="isbn" id="" class="form-control" pattern = "(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx])" placeholder="ISBN code for book" autofocus required> 
      </div>
      <button class="btn btn-primary btn-block">
        Save
      </button>
    </form>
  </div>
</div>